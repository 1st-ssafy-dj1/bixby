layout-macro-def (vliveDetails) {
  params {
    param (vliveInfo) {
      type (vliveEvent)
      min (Required) max (One)
    }
  }
  content {
    cell-card {
      on-click {
        intent {
          goal : vliveScheduleDetail_Action
          value : $expr(vliveInfo)
        }
      }
       slot1 {
        image {
            url ("#{value(vliveInfo.imgUrl)}")
            shape (Square)
        }
      }
      slot2 {
        content {
          order (PrimarySecondary)
          primary ("#{value(vliveInfo.startAt)} | #{value(vliveInfo.title)}")
          secondary ("#{value(vliveInfo.channel)}")
        }
      }
    }
  }
}